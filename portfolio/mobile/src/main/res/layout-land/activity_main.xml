<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/portfolio_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spotify_btn"
        android:id="@+id/spotify_btn"
        android:background="@color/blue"
        android:layout_marginTop="25dp"
        android:layout_above="@+id/super_btn"
        android:layout_toLeftOf="@+id/portfolio_txt"
        android:width="350px"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/super_btn"
        android:id="@+id/super_btn"
        android:background="@color/green"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/spotify_btn"
        android:layout_alignStart="@+id/spotify_btn"
        android:layout_alignRight="@+id/spotify_btn"
        android:layout_alignEnd="@+id/spotify_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/built_btn"
        android:id="@+id/built_btn"
        android:background="@color/yellow"
        android:width="350px"
        android:layout_alignTop="@+id/super_btn"
        android:layout_alignLeft="@+id/xyz_btn"
        android:layout_alignStart="@+id/xyz_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz_btn"
        android:id="@+id/xyz_btn"
        android:background="@color/orange"
        android:width="350px"
        android:layout_alignTop="@+id/spotify_btn"
        android:layout_toRightOf="@+id/portfolio_txt"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone_btn"
        android:id="@+id/capstone_btn"
        android:background="@color/red"
        android:width="350px"
        android:layout_below="@+id/super_btn"
        android:layout_toRightOf="@+id/super_btn"
        android:layout_marginTop="51dp"
        android:layout_toLeftOf="@+id/built_btn"
        android:layout_toStartOf="@+id/built_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/author"
        android:id="@+id/author"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
